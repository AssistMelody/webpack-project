<section class='mkt-standard-image-sidebar'>
  <div class='main-image'>
    <img src='{{standardImageSidebar.imageCaptionBlock.image.uploadDestinationId}}' alt='' />
    <p>{{standardImageSidebar.imageCaptionBlock.caption}}</p>
  </div>
  <div class='content'>
    <h3>{{standardImageSidebar.headline.value}}</h3>
    <h4>{{standardImageSidebar.descriptionTextBlock.headline.value}}</h4>
    <div class="content-desc">
      {{#each standardImageSidebar.descriptionTextBlock.body.textList}}
        {{> text value=value }}
      {{/each}}
    </div>
    <ul class="content-bullet-point">
      {{#each standardImageSidebar.descriptionTextBlock.textList}}
        <li>{{value}}</li>
      {{/each}}
    </ul>
  </div>
  <div class='sidebar'>
    <img src='{{standardImageSidebar.sidebarImageTextBlock.image.uploadDestinationId}}' alt='' />
    <h4>{{standardImageSidebar.sidebarImageTextBlock.headline.value}}</h4>
    <div class="sidebar-desc">
      {{#each standardImageSidebar.sidebarImageTextBlock.body.textList}}
        {{> text value=value }}
      {{/each}}
    </div>
    <ul class="sidebar-bullet-point">
      {{#each standardImageSidebar.sidebarListBlock.textList}}
      <li>{{value}}</li>
      {{/each}}
    </ul>
  </div>
</section>